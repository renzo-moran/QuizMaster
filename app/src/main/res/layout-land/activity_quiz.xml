<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayoutQuiz"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bck"
    android:orientation="vertical"
    tools:context=".HistoryQuizActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewQuestionNumber"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="@string/question_1"
            android:textColor="#E91E63"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnTime"
            style="@style/TimerStyle"
            android:layout_width="113dp"
            android:layout_height="58dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:backgroundTint="#F3EAA0"
            android:text="@string/initial_time" />

        <TextView
            android:id="@+id/textViewQuestion"
            android:layout_width="340dp"
            android:layout_height="170dp"
            android:layout_gravity="center"
            android:background="#EFD68C"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="79dp"
            android:layout_gravity="end"
            android:layout_marginStart="50dp"
            android:contentDescription="@string/question_result"
            app:srcCompat="@drawable/questmark" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayoutTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextAnswer"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="@string/write_answer"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/linearLayoutRadio1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rdbOption1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"
                    android:text="@string/option1" />

                <RadioButton
                    android:id="@+id/rdbOption2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:text="@string/option2" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutRadio2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rdbOption3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"
                    android:text="@string/option3" />

                <RadioButton
                    android:id="@+id/rdbOption4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:text="@string/option4" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSkip"
            style="@style/ButtonWith3DText"
            android:layout_width="131dp"
            android:layout_height="65dp"
            android:backgroundTint="#D093DA"
            android:text="@string/skip" />

        <Button
            android:id="@+id/btnAnswer"
            style="@style/ButtonWith3DText"
            android:layout_width="131dp"
            android:layout_height="65dp"
            android:layout_marginStart="50dp"
            android:backgroundTint="#CF79DD"
            android:text="@string/answer" />

        <Button
            android:id="@+id/btnEnd"
            style="@style/ButtonWith3DText"
            android:layout_width="132dp"
            android:layout_height="59dp"
            android:layout_gravity="center"
            android:layout_marginStart="50dp"
            android:backgroundTint="#B39DDC"
            android:text="@string/exit" />
    </LinearLayout>

</LinearLayout>